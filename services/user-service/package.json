{
  "name": "muziloop-user-service",
  "version": "1.0.0",
  "description": "Muziloop User Service - handles auth, registration and user profiles",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --ci --coverage",
    "test:unit": "jest --testPathPattern=tests --ci --coverage --passWithNoTests"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/**"
    ],
    "testResultsProcessor": "jest-junit",
    "testTimeout": 30000
  },
  "dependencies": {
    "@fastify/jwt": "^9.0.0",
    "@fastify/redis": "^7.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "fastify": "^5.0.0",
    "pg": "^8.11.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "pino-pretty": "^13.1.3",
    "supertest": "^6.3.3"
  }
}
